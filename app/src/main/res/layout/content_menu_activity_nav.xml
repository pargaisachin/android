<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF5252"
        tools:context="com.example.sachin.quizapp.MenuActivity">


        <!--LINEAR ONE-->
        <LinearLayout
            android:id="@+id/linearone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <!--SPORT-->
            <ImageButton
                android:id="@+id/sport"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_taj_mahal"
                android:background="@null"
                />


            <ImageButton
                android:id="@+id/india"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_world_map"
                android:background="@null"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/textone"
            android:layout_below="@+id/linearone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INDIA"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INTERNATIONAL"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineartwo"
            android:layout_below="@id/textone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/political"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_mayor"
                android:background="@null"
                />



            <ImageButton
                android:id="@+id/history"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_abraham_lincoln"
                android:background="@null"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/texttwo"
            android:layout_below="@+id/lineartwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="POLITICS"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HISTORY"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/linearthree"
            android:layout_below="@id/texttwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/geography"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_earth_globe"
                android:background="@null"
                />



            <ImageButton
                android:id="@+id/sport1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/running"
                android:background="@null"
                />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/textthree"
            android:layout_below="@+id/linearthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GEOGRAPHY"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SPORT"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/linearfour"
            android:layout_below="@id/textthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/universe"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_universe"
                android:background="@null"
                />



            <ImageButton
                android:id="@+id/plant"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_plant"
                android:background="@null"
                />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/textfour"
            android:layout_below="@+id/linearfour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UNIVERSE"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PLANT"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                />

        </LinearLayout>









    </RelativeLayout>

</ScrollView>
